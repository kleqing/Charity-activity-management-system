﻿@{
    ViewData["Title"] = "Home Page";
}

@model BussinessObject.User

<link rel="stylesheet" href="/css/origin.css" />

<!-- Image that wrap the whole first part -->
<div class="home-wrapper">
    <img src="~/images/landingpageRemake.jpg"
         alt="Hero image" />
    <!-- transparent navbar for impact -->
    <nav class="flex justify-around p-4 bg-transparent z-20 absolute w-full items-center">
        <h1 class="text-2xl italic font-bold">Dynamics</h1>
        <div class="flex gap-2">
            <a class="btn btn-ghost text-xl hover:scale-105 underline" asp-area="Identity" asp-page="/Account/Login">Login</a>
            <a class="btn btn-ghost text-xl hover:scale-105 underline" asp-area="Identity" asp-page="/Account/Register">Sign up</a>
        </div>
    </nav>

