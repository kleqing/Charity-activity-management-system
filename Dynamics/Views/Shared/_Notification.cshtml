<script>
    toastr.options.closeButton = true;
     toastr.options.showMethod = 'slideDown';
             toastr.options.newestOnTop = false;
</script>

@if (TempData[MyConstants.Error] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.error('@TempData[MyConstants.Error]')
    </script>
}
@if (TempData[MyConstants.Success] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
     
        toastr.success('@TempData[MyConstants.Success]')
    </script>
}
@if (TempData[MyConstants.Warning] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.warning('@TempData[MyConstants.Warning]')
        toastr.options.closeDuration = 3000;
    </script>
}
@if (TempData[MyConstants.Info] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.info('@TempData[MyConstants.Info]', '', {timeOut: 2000})
    </script>
}