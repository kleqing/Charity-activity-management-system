@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor Accessor
@inject Dynamics.DataAccess.Repository.IProjectRepository projectRepo

<link rel="stylesheet" href="~/css/output.css">

<!-- Navbar -->
@{
    var currentProjectIDString = Accessor.HttpContext.Session.GetString("currentProjectID");
    var currentProject = new Project();
    if (!string.IsNullOrEmpty(currentProjectIDString))
    {      
        currentProject = await projectRepo.GetProjectAsync(p => p.ProjectID.Equals(new Guid(currentProjectIDString)));
    }

    var images = currentProject.Attachment;
    string projectFirstImage = "";
    if (images != null)
    {
        projectFirstImage = images.TrimEnd(',', ' ').Split(",")[0];
    }
}

<!-- banner project -->
<div class=" flex justify-center items-center w-full relative" style="height:50vh;">
    <img src="@projectFirstImage" class="w-5/6 h-full object-cover blur-md absolute" alt="@currentProject.ProjectName"/>
    <div class="flex-col z-10 bg-white p-6 rounded">
        @* remind: inject to take project name, organization name *@
        <h2 class="font-serif text-black font-bold text-6xl">@currentProject?.ProjectName</h2>
        <h4 class="font-serif text-slate-500 font-semibold text-4xl">By @currentProject?.Organization.OrganizationName</h4>
    </div>
</div>
<!-- end banner project -->
<!-- navbar -->
<nav class="bg-white shadow relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-center">
            <div class="flex space-x-8 text-2xl font-serif ">
                <a asp-action="ManageProject" asp-route-id="@currentProject?.ProjectID" class="px-4 py-4 text-blue-600 px-3 py-2 font-bold focus:bg-gray-100">Details</a>
                <a asp-action="ManageProjectDonor" asp-route-id="@currentProject?.ProjectID" class="px-4 py-4 text-gray-500 hover:text-blue-600 px-3 py-2 font-medium">Donors</a>
                <a asp-action="ManageProjectMember" asp-route-id="@currentProject?.ProjectID" class="px-4 py-4 text-gray-500 hover:text-blue-600 px-3 py-2  font-medium">Members</a>
                <a asp-action="ManageProjectResource" asp-route-id="@currentProject?.ProjectID" class="px-4 py-4 text-gray-500 hover:text-blue-600 px-3 py-2  font-medium">Resources</a>
                <a asp-action="ManageProjectPhaseReport" asp-route-id="@currentProject?.ProjectID" class="px-4 py-4 text-gray-500 hover:text-blue-600 px-3 py-2  font-medium">Updates</a>
            </div>
        </div>
    </div>
</nav>
<!-- end navbar -->



